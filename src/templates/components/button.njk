{% macro button(text, color='primary', size='large', className='', disabled=false, dataPopupId=null) %}
{# 
  colors: translucent, translucent-light, white, primary
  sizes: small, large
#}
  <button 
    class="
      button 
      --{{ color }} 
      --{{ size }} 
      {{ '--disabled' if disabled}}
      {{ className }}
    "
    {{ "disabled" if disabled }}
    
    {% if dataPopupId %}
      data-popup-id="{{ dataPopupId }}"
    {% endif %}
  >
    {{ text }}
  </button>
{% endmacro %}